{{> adminHeader title=title buttonBackRef=buttonBackRef}}
<main class="flex flex-col justify-center w-full h-max relative">
	<form
		action="/api/card-themes"
		method="post"
		enctype="multipart/form-data"
		id="formContainer"
		class="w-11/12 h-4/6 my-16 p-4 flex flex-col gap-4 rounded-xl"
	>
		<input type="hidden" name="themeId" value="{{themeData._id}}" />
		<div class="form-row flex flex-col gap-1 w-full">
			<label for="themeName">Theme Name</label>
			<input type="text" value="{{themeData.themeName}}" name="themeName" />
		</div>
		<div class="form-row flex flex-col gap-1 w-full">
			<label for="themeFront">Theme Front</label>
			<input type="file" name="themeFront" />
		</div>
		<div class="form-row flex flex-col gap-1 w-full">
			<label for="themeBack">Theme Back</label>
			<input type="file" name="themeBack" />
		</div>
		<div class="form-row">
			<input id="submitButton" type="submit" value="Submit" class="text-2xl bg-primary text-white px-8 py-2 rounded-full w-full" />
		</div>
	</form>
	<div class="w-full grid grid-cols-2">
		<div class="flex flex-col gap-2 justify-center items-center">
			<p class="text-xl">Current Front Face</p>
			<img class="max-h-[200px]" src="/images/themepacks/{{themeData.cardFront}}" alt="{{themeData.themeName}} front face" />
		</div>

		<div class="flex flex-col gap-2 justify-center items-center">
			<p class="text-xl">Current Back Face</p>
			<img class="max-h-[200px]" src="/images/themepacks/{{themeData.cardBack}}" alt="{{themeData.themeName}} back face" />
		</div>
	</div>
</main>