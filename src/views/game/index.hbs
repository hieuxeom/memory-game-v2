<header class="w-full flex justify-between items-center">
    <button id="backToHome" class="button-normal active text-white rounded-full">Back</button>
    <div id="timer" class="bg-secondary text-white px-8 py-2 rounded-full">
        <div class="text-[1.5rem] flex gap-2">
            <p>Time/</p>
            <p id="minuteValue">00</p>
            <p>:</p>
            <p id="secondValue">00</p>
        </div>
    </div>
</header>
<main class>
    <div class="w-full grid grid-cols-4 gap-4 my-16 px-4" id="gameContainer"></div>
</main>
<section id="notification" class="absolute top-0 left-0 w-full h-full flex justify-center items-center bg-slate-800/50">
    <div class="w-3/4 relative">
        <img src="/images/win_noti.png" alt="">
        <div class="absolute w-full top-28 left-0 transform-x-[-50%] flex flex-col gap-4">
            <div class="flex justify-between px-8">
                <h3 class="text-secondary text-3xl">Your Score:</h3>
                <h3 id="gameScore" class="text-primary-shadow text-3xl">1200</h3>
            </div>
            <div class="flex justify-between px-8">
                <h3 class="text-secondary text-3xl">Highest Score:</h3>
                <h3 id="playerHighScore" class="text-primary-shadow text-3xl">4900</h3>
            </div>
        </div>
        <div class="absolute w-full bottom-10 flex justify-center">
            <a href="/" class="text-xl hover:text-secondary text-white rounded-full bg-transparent text-center">Back to<br>Home</a>
        </div>
    </div>
</section>